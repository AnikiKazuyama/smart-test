{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "baseUrl": "./src",
    "types": ["react"],
    "paths": {
      "~*": ["./*"]
    }
  },
  "parcelTsPluginOptions": {},
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "include": ["src/**/*"]
}